<form action="" id="user-input event-form">
  <div class="form-group">
    <input
      class="input is-large has-text-centered"
      id="event-date"
      type="date"
      placeholder="Event Date"
    />
  </div>
  <input
    class="input is-large has-text-centered"
    id="start-time"
    type="time"
    placeholder="Start Time"
  />
  <input
    class="input is-large has-text-centered"
    id="end-time"
    type="time"
    placeholder="End Time"
  />
    <input
    class="input is-large has-text-centered"
    id="event-title"
    type="text"
    placeholder="Title"
  />
    <input
    class="input is-large has-text-centered"
    id="content"
    type="text"
    placeholder="Content"
  />
  <button type="submit" id="new-event-submit" class="btn new-event-button">
    Submit
  </button>
</form>
<button type="submit" id="new-event-submit" class="btn new-event-button">
  <a class="link" href="">Submit</a>
</button>

<script src="/js/add-event.js"></script>